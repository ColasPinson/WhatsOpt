<% if policy(@mda).update? %>
  <%= button_to edit_mda_url(@mda), method: :get, class:"btn float-right" do |b|%>
    <span class="fa fa-pencil"></span>
      Edit
  <% end %> 
<% end %>
      

<h1><%= @mda.name %></h1>

<% if @mda.attachment %>
<p>
  <small>created from <%= link_to @mda.attachment.data_file_name, attachment_path(@mda.attachment) %> by <%= @mda.owner %></small>
</p>
<% end %>

<div id="mda-viewer" data-mda="<%= @mda.to_mda_viewer_json %>" data-is-editing="false" data-api-key="<%=current_user.api_key%>"></div> 

<script>var API_KEY = "<%=current_user.api_key%>"</script>

<% if Rails.env == 'development' and `hostname` =~ /(wdcps601h)/ %>
  <script src="http://192.168.99.100:8081/packs/mda_viewer_application.js"></script>
<% else %>
  <%= javascript_pack_tag 'mda_viewer_application' %>
<% end%>
 
