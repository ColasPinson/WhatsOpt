<p>
<table class="table table-striped">
	<thead>
	  <tr>
	    <th>Title</th>
	    <th>Owner</th>
      <th>Created</th>
      <th>Action(s)</th>
	  </tr>
	</thead>
	
	<tbody>
  <% geomodels.each do |geomodel| %>
    <tr>
      <td><%= link_to geomodel.title, geometry_model_path(geomodel) %></td>
      <td><%= geomodel.owner.login %></td>
      <td><%= time_ago_in_words(geomodel.created_at) %> ago</td>
      <td>
        <% if policy(geomodel).update? %>
        	<%= link_to edit_geometry_model_path(geomodel), 
        	  class: "btn btn-sm", title: "Edit" do %>
	          <i class="fa fa-edit"></i> 
	        <% end %>    
	      <% end %>
        <% if policy(geomodel).destroy? %>
          <%= link_to geomodel, method: :delete, data: { title: 'Are you sure?', 
                                                         confirm: "Remove #{geomodel.title} geometric model?",
                                                         commit: 'Yes',
                                                         cancel: 'No, cancel' }, 
                  class: "btn btn-sm text-danger", title:"Delete" do %>
            <i class="fa fa-times"></i> 
          <% end %>        
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</p>


