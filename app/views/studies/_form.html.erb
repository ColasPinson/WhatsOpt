<%= form_for @study, :html => { :multipart => true, :class => "form-vertical", :role => "form" } do |f| %>

  <div class="form-group">
    <%= f.label :name, "Name", {class: "control-label"} %>  
    <%= f.text_field :name, {class: "control-label"} %>  
  </div>  


  <div class="form-group">
    <%= f.label :version, "Files", {class: "control-label"} %>
    <%= render "attachments/attachments_form", :f => f %>  
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= f.submit "Cancel", class: "btn", name: "cancel_button" %>
  </div>
<% end %>
