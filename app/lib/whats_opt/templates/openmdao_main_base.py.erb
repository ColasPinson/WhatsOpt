<% @mda.sub_analyses.each do |a| -%>
from <%= a.py_full_modulename %> import <%= a.py_classname %>
<% end -%>
<% @mda.all_plain_disciplines.each do |d| -%>
from <%= d.py_full_modulename %> import <%= d.py_classname %>
<% end -%>
