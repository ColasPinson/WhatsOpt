{
  "plugins": ["react"],
  "extends": [
	"google",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
    	"jsx":true
    }
  },
  "env": {
    "commonjs": true,
    "es6": true
  },
  "rules": {
    "max-len": [
      "error",
      120
    ],
	"guard-for-in": "off",
    "quotes": "off",
    "no-var": "off",
    "linebreak-style": "off",
    "require-jsdoc": "off",
    "brace-style": "off",
    "react/jsx-uses-vars": [2]
  }
}