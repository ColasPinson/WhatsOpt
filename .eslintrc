{
  "settings": {
    "react": {
      "version": "detect",
    },
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "google",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
    }
  },
  "env": {
    "commonjs": true,
    "es6": true
  },
  "rules": {
    "max-len": [
      "error",
      120
    ],
    "guard-for-in": "off",
    "quotes": "off",
    "no-var": "off",
    "linebreak-style": "off",
    "require-jsdoc": "off",
    "brace-style": "off",
    "react/jsx-uses-vars": [
      2
    ]
  }
}
